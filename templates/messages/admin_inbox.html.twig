{% extends 'base.html.twig' %}
{% block title 'Messagerie' %}
{% block body %}
<div class="container">
    <h1 class="p-2">Messagerie</h1>
    <a class="btn btn-primary" href="{{ path('message_new') }}">Nouveau message</a>
    <div class="d-flex">
        <table class="table col-3 table-exp">
            <thead class="thead-dark">
            <tr>
                <th scope="col" class="text-center">Contacts</th>
            </tr>
            </thead>
            <tbody>
            {% for candidate in candidates %}
                <tr class="contact-box">
                    <th
                        scope="row"
                        class="text-white bg-secondary contact-line"
                        data-user="{{ candidate.id }}"
                    >
                        {{ candidate.gender }} {{ candidate.firstName }} {{ candidate.surname }}
                        {% if candidate.news > 0 %}
                        <span class="right notification">{{ candidate.news }}</span>
                        {% endif %}
                    </th>
                </tr>
            {% endfor %}
            {% for company in companies %}
                <tr class="contact-box" data-url="{{ path('message_admin_message', {'id': company.id}) }}">
                    <th
                            scope="row"
                            class="text-white bg-orange contact-line"
                            data-user="{{ company.id }}"
                    >
                        StÃ©. {{ company.name }}
                        {% if company.news > 0 %}
                            <span class="right notification">{{ company.news }}</span>
                        {% endif %}
                    </th>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="col-9">
             {% if messages is defined %}
            <div class="scroll">
                <div class="d-flex flex-column">
                 {% include 'components/_messagerie.html.twig' %}
                </div>
            </div>
            {% else %}
                 <p>Messagerie Accueil</p>
            {% endif %}
        </div>
    </div>
    {% endblock %}
    {% block javascript %}
        {{ parent() }}
        {{ encore_entry_script_tags('inbox_admin') }}
    {% endblock %}
