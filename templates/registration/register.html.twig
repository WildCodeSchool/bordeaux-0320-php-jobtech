{% extends 'base.html.twig' %}

{% block title %}Créer mon compte{% endblock %}
{% block body %}
    {% form_theme register 'bootstrap_4_layout.html.twig' %}
    <h1>Créer mon compte</h1>

    {{ form_start(register) }}

    {{ form_row(register.email) }}
    {{ form_row(register.plainPassword.first) }}
    {{ form_row(register.plainPassword.second) }}
    {% if action == 'create_candidat' %}
    <h2>Mes informations personnelles</h2>
        {{ form_row(register.userInformation.lastname) }}
        {{ form_row(register.userInformation.firstname) }}
        {{ form_row(register.userInformation.birthday) }}
        {{ form_row(register.userInformation.city) }}
        {{ form_row(register.userInformation.country) }}
        {{ form_row(register.userInformation.phoneNumber) }}
        {{ form_row(register.userInformation.homeNumber) }}
        {{ form_row(register.userInformation.postalCode) }}
        <div class="d-flex justify-content-between">
            {{ form_row(register.userInformation.isContactableTel) }}
            {{ form_row(register.userInformation.isContactableEmail) }}
            {{ form_row(register.userInformation.isHandicapped) }}
        </div>
    {% elseif action == 'create_company' %}
        <h2>Information de l'entreprise</h2>
        {{ form_row(register.company.name) }}
        {{ form_row(register.company.postalCode) }}
        {{ form_row(register.company.city) }}
        {{ form_row(register.company.country) }}
        {{ form_row(register.company.address) }}
        <h2>Contact</h2>
        {{ form_row(register.company.contacts.lastname) }}
        {{ form_row(register.company.contacts.firstname) }}
        {{ form_row(register.company.contacts.email) }}
        {{ form_row(register.company.contacts.poste) }}
        {{ form_row(register.company.contacts.phoneNumber) }}



    {% endif %}
    {{ form_row(register.agreeTerms) }}
    {%  if action == 'create_candidat' %}
    <button type="submit" class="btn">Créer mon compte candidat</button>
    {% elseif action == 'create_company' %}
    <button type="submit" class="btn">Créer mon compte entreprise</button>
    {% endif %}
    {{ form_end(register) }}
{% endblock %}
