{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h1 class="p-5 text-center">{{ content.title }}</h1>

        {% if is_granted('ROLE_ADMIN') %}
            {{ form_start(form) }}
            <div>
                {{ form_widget(form.html) }}
            </div>
            <div class="d-flex justify-content-end mt-5">
                <button class="btn btn-success">Enregistrer</button>
                <a class="btn btn-dark ml-3" href="{{ path('footer_page', {'page': content.identifier}) }}">Revenir vers
                    la page {{ content.title }}</a>
            </div>
            {{ form_end(form) }}
        {% endif %}
    </div>

{% endblock %}
